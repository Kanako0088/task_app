<div class="information">
  <h2>スケジュール編集</h2>
</div>

<%= render "shared/error", obj: @schedule %>

<%= form_for @schedule do |f| %>
<table>
  <tbody>
    <tr>
      <th><%= f.label :title, "タイトル"%></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_day, "開始日"%></th>
      <td><%= f.date_field :start_day %></td>
    </tr>
    <tr>
      <th><%= f.label :finish_day, "終了日"%></th>
      <td><%= f.date_field :finish_day %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day, "終日"%></th>
      <td><%= f.check_box :all_day,{},"○","" %><br>終日の場合はチェックを入れます</td>
    </tr>
    <tr>
      <th><%= f.label :memo, "スケジュールメモ"%></th>
      <td><%= f.text_area :memo,{class: "posts-content"} %></td>
    </tr>
  </tbody>
</table>

<div>
  <ul>
    <li><%= f.submit "スケジュールの編集を完了する" %></li>
    <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
  </ul>
</div>
<% end %>