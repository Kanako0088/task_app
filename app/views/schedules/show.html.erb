<div class="information">
	<h2>スケジュール詳細</h2>
</div>

<table>
	<tbody>
		<tr>
			<th>タイトル</th>
			<td><%= @schedule.title %></td>
		</tr>
		<tr>
			<th>開始日</th>
			<td><%= @schedule.start_day.strftime('%Y年%m月%d日') %></td>
		</tr>
		<tr>
			<th>投稿日時</th>
			<td><%= @schedule.updated_at.strftime('%Y年%m月%d日') %></td>
		</tr>
		<tr>
			<th>終日</th>
			<td><%= @schedule.all_day %></td>
		</tr>
		<tr>
			<th>スケジュールメモ</th>
			<td><%= @schedule.memo %></td>
		</tr>
	</tbody>
</table>

<ul>
	<li>
		<%= link_to "スケジュール一覧に戻る", :schedules %>
	</li>
	<li>
		<%= link_to "スケジュールを編集する", [:edit, @schedule] %>
	</li>
	<li>
		<%= link_to "スケジュールを削除",
								@schedule, method: :delete,
													 data: { confirm: "本当に削除しますか？" } %>
	</li>
</ul>